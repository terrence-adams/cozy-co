@model Property
@*
    Same page for Add and Edit (actions)
    Add -> Model is null
    Edit -> Model is not null
*@

@{
    // Ternary operator
    var action = Model == null ? "Add" : "Edit";

    var propertyTypes = ViewData["PropertyTypes"] as ICollection<PropertyType>;
    IEnumerable<SelectListItem> ptItems = new SelectList(propertyTypes, "Id", "Description");
}

@if (action == "Add")
{
    <h1>Add a new Property</h1>
}
else
{
    <h1>Edit Property</h1>
}

<form asp-action="@action" asp-controller="property" method="post">
    <div class="form-group">
        <label asp-for="Address"></label>
        <input class="form-control" asp-for="Address">
        <span asp-validation-for="Address"></span>
    </div>

    <div class="form-group">
        <label asp-for="Address2"></label>
        <input class="form-control" asp-for="Address2">
    </div>

    <div class="form-group">
        <label asp-for="City"></label>
        <input class="form-control" asp-for="City">
        <span asp-validation-for="City"></span>
    </div>

    <div class="form-group">
        <label asp-for="Zipcode"></label>
        <input class="form-control" asp-for="Zipcode">
        <span asp-validation-for="Zipcode"></span>
    </div>

    <div class="form-group">
        <label asp-for="PropertyTypeId"></label>
        <select class="form-control"
                asp-for="PropertyTypeId"
                asp-items="@ptItems"></select>
    </div>

    <button type="submit" class="btn btn-primary">@action</button>
    <a class="btn btn-secondary" asp-action="index" asp-controller="property">Cancel</a>
</form>