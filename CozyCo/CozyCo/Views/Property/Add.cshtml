@*Model Definition*@
@model Property

<h1>Add a new property</h1>

<form asp-action="add" asp-controller="Property" method="post">

    <div class="form-group">
        <label asp-for="Address"></label>
        <input class="form-control" asp-for="Address">
    </div>

    <div class="form-group">
        <label asp-for="Address2"></label>
        <input class="form-control" asp-for="Address2">
    </div>

    <div class="form-group">
        <label asp-for="City"></label>
        <input class="form-control" asp-for="City">
    </div>

    <div class="form-group">
        <label asp-for="Zipcode"></label>
        <input class="form-control" asp-for="Zipcode">
    </div>

    <button type="submit" class=" btn-primary">Add Property</button>
    <a class=" btn-secondary" asp-action="index" asp-controller="property">Cancel</a>
</form>